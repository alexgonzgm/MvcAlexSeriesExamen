@model MvcAlexSeriesExamen.Models.Personaje

@{
    ViewData["Title"] = "AddPersonaje";
    List<Serie> series = ViewData["SERIES"] as List<Serie>;
}

<h1>AddPersonaje</h1>

<h4>Personaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPersonaje">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NombrePersonaje" class="control-label"></label>
                <input name="nombre" class="form-control" />
                <span asp-validation-for="NombrePersonaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input name="imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Series :</label>
                <select name="idserie" class="form-control">
                    @foreach (var item in series)
                    {
                        <option value="@item.IdSerie">@item.NombreSerie</option>
                    }
                </select>
                <span asp-validation-for="IdSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

